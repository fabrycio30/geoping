<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.geoping.datacollection">

    <!-- Permissões necessárias para escaneamento de Wi-Fi -->
    <!-- Android 10+ requer permissões de localização para acessar Wi-Fi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Android 13+ (API 33+) requer permissão adicional para Wi-Fi -->
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="33" />
    
    <!-- Android 9+ -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Para conectividade de rede -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Para Foreground Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_compass"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_compass"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        
        <!-- PRODUCAO: Tela principal (Login) -->
        <activity
            android:name="com.geoping.app.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.geoping.app.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="com.geoping.app.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="com.geoping.app.CreateRoomActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.MainActivity"/>

        <activity
            android:name="com.geoping.app.SearchRoomActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.MainActivity"/>

        <activity
            android:name="com.geoping.app.RoomDataCollectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.CreateRoomActivity"/>

        <activity
            android:name="com.geoping.app.RoomTrainingResultsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="com.geoping.app.RoomManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.MainActivity"/>

        <activity
            android:name="com.geoping.app.ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.MainActivity"/>

        <activity
            android:name="com.geoping.app.ConversationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.ChatActivity"/>

        <activity
            android:name="com.geoping.app.PendingRequestsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.geoping.app.RoomManagementActivity"/>

        <!-- TESTE/ANALISE: App de coleta (acessivel via menu dev) -->
        <activity
            android:name=".DataCollectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".TrainingResultsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".DataCollectionActivity"/>

        <!-- Serviço de Detecção de Presença -->
        <service
            android:name="com.geoping.app.services.PresenceService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />
    </application>

</manifest>

