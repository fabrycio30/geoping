<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ConversationActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1976D2"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"
                android:contentDescription="Voltar"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/textViewConversationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Titulo da Conversa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Criado por: Usuario"
            android:textSize="12sp"
            android:textColor="#E3F2FD" />

    </LinearLayout>

    <!-- Lista de Mensagens -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/inputLayout"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Mensagem vazia -->
    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Nenhuma mensagem ainda.\nSeja o primeiro a enviar!"
        android:textSize="14sp"
        android:textColor="#999999"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Input de Mensagem -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Digite uma mensagem..."
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:maxLines="4"
            android:inputType="textCapSentences|textMultiLine" />

        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#1976D2"
            android:contentDescription="Enviar"
            android:scaleType="fitCenter" />

    </LinearLayout>

</RelativeLayout>

