<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome da sala -->
        <TextView
            android:id="@+id/textViewRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da Sala"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"/>

        <!-- SSID -->
        <TextView
            android:id="@+id/textViewSsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi: SSID_DA_REDE"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:layout_marginTop="4dp"/>

        <!-- Status do modelo -->
        <TextView
            android:id="@+id/textViewModelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo: Nao treinado"
            android:textSize="12sp"
            android:textColor="#E74C3C"
            android:layout_marginTop="8dp"/>

        <!-- Informacoes adicionais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textViewSubscribers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 inscritos"
                android:textSize="12sp"
                android:textColor="#95A5A6"/>

            <TextView
                android:id="@+id/textViewPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 pendentes"
                android:textSize="12sp"
                android:textColor="#F39C12"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Botoes de acao -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonEnterChat"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ENTRAR"
                android:textSize="12sp"
                android:backgroundTint="#3498DB"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"/>

            <Button
                android:id="@+id/buttonManage"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="GERENCIAR"
                android:textSize="12sp"
                android:backgroundTint="#95A5A6"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

